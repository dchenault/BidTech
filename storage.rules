rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper to check if the user is a member of the specified account
    // by reading their profile from the root /users collection.
    function isAccountMember(accountId) {
      let userProfile = get(/databases/(default)/documents/users/$(request.auth.uid));
      return isSignedIn() && userProfile.data.accounts[accountId] != null;
    }

    // Rule for item images. The path includes the account ID for security checks.
    match /items/{accountId}/{allPaths=**} {
      allow read, write: if isAccountMember(accountId);
    }
    
    // Fallback rule to deny access to all other paths by default.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
