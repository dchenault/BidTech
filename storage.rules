
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Allow users to read and write to their own folder within the 'items' directory.
    // The path is structured as /items/{userId}/{allOtherPaths}.
    // This rule is simple, fast, and secure, as it only checks the user's own authentication token.
    match /items/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fallback rule to deny access to all other paths by default.
    // This is a critical security measure to prevent unauthorized access.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

    