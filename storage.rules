rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // This function must mirror the logic in firestore.rules to correctly
    // verify that the authenticated user is a member of the target account.
    // It checks the user's root profile document for an entry in the 'accounts' map.
    function isAccountMember(accountId) {
      return request.auth != null &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.accounts[accountId] != null;
    }

    // The path for item images is /items/{accountId}/{allPaths=**}
    // This rule allows reads and writes only if the user is a member of the account
    // specified in the file path, ensuring strict multi-tenant isolation.
    match /items/{accountId}/{allPaths=**} {
      allow read, write: if isAccountMember(accountId);
    }
  }
}
