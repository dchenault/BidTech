rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function getUser(userId) {
      return get(/databases/$(database)/documents/users/$(userId));
    }
    
    function isAccountAdmin(accountId) {
      let userDoc = getUser(request.auth.uid).data;
      return isSignedIn() && userDoc.accounts[accountId] == 'admin';
    }

    function isAccountMember(accountId) {
      let userDoc = getUser(request.auth.uid).data;
      return isSignedIn() && userDoc.accounts[accountId] != null;
    }
    
    // Rules for the root `users` collection
    match /users/{userId} {
      // A user can create their own profile document.
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // A user can read or update their own profile document.
      allow read, update: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Rules for `accounts` and all their subcollections
    match /accounts/{accountId} {
       // Only an admin of this account can read or update it.
      allow read, update: if isAccountAdmin(accountId);

      // A user can create an account document only if they are setting themselves as admin
      // and the account ID matches their user ID. This enforces a 1-to-1 relationship on creation.
      allow create: if isSignedIn() && 
                      request.resource.data.adminUserId == request.auth.uid &&
                      accountId == request.auth.uid;
      
      // Do not allow clients to list or delete accounts.
      allow list, delete: if false;

      // Secure all subcollections of an account
      match /{subcollection}/{docId} {
        allow read, write: if isAccountMember(accountId);
      }

      // More specific rules for auctions to allow for managers
      match /auctions/{auctionId} {
        function isAuctionManager() {
          return get(/databases/$(database)/documents/accounts/$(accountId)/auctions/$(auctionId)).data.managers[request.auth.uid] != null;
        }

        // Members can read, admins/managers can update/delete
        allow read: if isAccountMember(accountId);
        allow create: if isAccountMember(accountId);
        allow update, delete: if isAccountAdmin(accountId) || isAuctionManager();

        // Rules for subcollections of an auction inherit the parent auction's member check
        // but can have their own manager logic if needed. For now, we keep it simple.
         match /{subcollection}/{docId} {
            allow read, write: if isAccountAdmin(accountId) || isAuctionManager();
         }
      }
    }
  }
}
